extends layout

block content
    h1= title
    table
        tr
            th Name
            th Goto
        each workout in workouts
                tr 
                    td #{workout.name}
                    td 
                        a(href="//localhost:8080/workouts/showexcinwok/" + workout.name) Go to workout
    form(method="post" action="//localhost:8080/workouts/createworkout")
        input(
            type="text"
            name="name"
            id="workoutname"
        )
        input(
            type="submit"
            value="Create workout"
            id="createworkbtn"
        )
    
    form(method="get" action="//localhost:8080/")
        input(
            type="submit"
            value="Logout"
            id="Logoutbtn"
        )